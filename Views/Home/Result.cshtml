@model string

@{
    ViewData["Title"] = "Flight Results";
    var flights = Model?.Split("---", StringSplitOptions.RemoveEmptyEntries) ?? new string[0];
    var chunkThreshold = 3;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary mb-2">‚úàÔ∏è Your Flight Options</h1>
        <p class="lead text-muted">Cheapest and Smartest flights for your route</p>
    </div>

    @if (flights.Length > 0)
    {
        <h2 class="mb-4 text-success text-center fw-bold">üí∞ Cheapest Flights</h2>
        <div class="row g-4 mb-5">
            @{
                var index = 0;
                foreach (var flight in flights)
                {
                    if (index == chunkThreshold)
                    {
                        break;
                    }
                    @Html.Partial("_FlightCard", flight)
                    index++;
                }
            }
        </div>

        @if (flights.Length > chunkThreshold)
        {
            <h2 class="mb-4 text-info text-center fw-bold">‚ö° Fastest / Non-Stop Flights</h2>
            <div class="row g-4 mb-5">
                @{
                    for (int i = chunkThreshold; i < flights.Length; i++)
                    {
                        @Html.Partial("_FlightCard", flights[i])
                    }
                }
            </div>
        }
    }

    <div class="text-center mt-5 pt-4">
        <a href="/" class="btn btn-outline-primary btn-lg px-5">üîç Search for More Flights</a>
    </div>
</div>

<style>
.hover-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}
.hover-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}
.flight-details .row {
    align-items: center;
}
.card-body {
    display: flex;
    flex-direction: column;
}
.mt-auto {
    margin-top: auto !important;
}
.airline-logo-container {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #e9ecef;
}
.airline-logo {
    width: 40px;
    height: 40px;
    object-fit: contain;
    border-radius: 4px;
}
.airline-icon {
    font-size: 24px;
    color: #6c757d;
}
.discount-badge {
    word-wrap: break-word;
    overflow-wrap: break-word;
}
.discount-badge .badge {
    white-space: normal;
    max-width: 100%;
    padding: 8px 12px;
    font-size: 0.875rem;
    line-height: 1.2;
}
@@media (max-width: 768px) {
    .container {
        padding-left: 15px;
        padding-right: 15px;
    }
    .card-body {
        padding: 1.5rem !important;
    }
    .discount-badge .badge {
        font-size: 0.8rem;
        padding: 6px 10px;
    }
}
</style>
